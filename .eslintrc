env:
  browser: true
  node: true
plugins:
  - react
ecmaFeatures:
  jsx: true
  defaultParams: true
  arrowFunctions: true
  templateStrings: true
  objectLiteralShorthandProperties: false
  modules: true
  classes: true
rules:
  max-len: [2, 80, 2]
  no-shadow: 0
  quotes: [2, "single"]
  strict: [2, "global"]
  no-underscore-dangle: 0
  no-debugger: 1
  no-unused-vars: [2, {args: "none"}]
  indent: [2, 2, {SwitchCase: 1, VariableDeclarator: 2}]
  no-single-tests: 1
  no-test-utils: 1
  react/jsx-key: 1
  react/jsx-no-duplicate-props: 1
